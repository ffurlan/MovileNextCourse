<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/default_background_fifth">

      <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
        android:id="@+id/image_seasonTitle"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:scaleType="centerCrop"
        android:src="@drawable/highlight_placeholder" />

      <TextView
      android:id="@+id/text_seasonYear"
      android:text="Episodes"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="151dp"
      android:textColor="@color/default_textColor_first" />


     <ImageView
        android:id="@+id/image_season"
        android:layout_width="88dp"
        android:layout_height="128dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/season_item_placeholder"
         android:layout_below="@+id/text_seasonYear"/>

    <TextView
        android:id="@+id/text_seasonEpisode"
        android:text="Episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/default_textColor_third"
        android:layout_below="@+id/image_season"/>

    <TextView
        android:id="@+id/text_seasonRating"
        android:text="8.5"
        android:textColor="@color/theme_textColorPrimary"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="center"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/rating"
        android:layout_alignBottom="@+id/image_season"/>

</RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>
