<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        card_view:cardBackgroundColor="@color/default_background_fourth">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_favorites_header"
                android:layout_width="69dp"
                android:layout_height="55dp"
                android:layout_marginLeft="109dp"
                android:layout_marginTop="55dp"
                android:src="@drawable/favorites_header_tv_happy"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/default_textColor_first"
                android:textSize="@dimen/default_textSize_medium"
                android:text="Favourited Shows"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="127dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text_favorites_empty"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/default_textColor_fifth"
        android:textSize="@dimen/default_textSize_medium"
        android:layout_marginLeft="16dp"
        android:text="No show found"
        android:layout_marginTop="23dp" />

    <ListView
        android:id="@+id/list_view_favorites"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background_second" />



</LinearLayout>