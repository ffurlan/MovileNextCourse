<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="248dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/show_details_favorite"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="288dp"
            android:layout_marginTop="175dp"
            />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:scaleType="centerCrop"
            android:id="@+id/imgHeaderShowDetails" />


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="184dp"
            card_view:cardBackgroundColor="@color/default_color_second">

            <TextView
                android:id="@+id/txtShowRate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textColor="@color/default_textColor_first"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
    

    <android.support.v4.view.ViewPager
        android:id="@+id/show_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <android.support.v4.view.PagerTabStrip
            android:id="@+id/pager_tab"
            style="@style/AppTheme.SeasonDetails.ViewPager"
            />

    </android.support.v4.view.ViewPager>

</LinearLayout>