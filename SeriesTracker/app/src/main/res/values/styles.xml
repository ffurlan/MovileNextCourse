<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/theme_colorPrimaryDark</item>
        <item name="colorAccent">@color/theme_colorAccent</item>
        <item name="android:textColor">@color/theme_textColor</item>
        <item name="android:textColorPrimary">@color/theme_textColorPrimary</item>
        <item name="android:windowBackground">@color/theme_windowBackground</item>
    </style>

    <style name="AppTheme.EpisodeDetails"></style>

    <style name="AppTheme.EpisodeDetails.Screenshot" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/episode_details_screenshot_height</item>
        <item name="android:maxLines">2</item> --Ele deixará a string com somente 2 linhas.
        <item name="android:ellipsize">end</item> --Ele irá incluir "..." no final da string (caso passe de 2 linhas).
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Screenshot.Title" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_background_second</item>
        <item name="android:textSize">@dimen/default_textSize_veryLarge</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_large</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
    </style>

    <style name="AppTheme.SeasonDetails.Item.EpisodeNumber" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_background_second</item>
        <item name="android:textSize">@dimen/default_textSize_small</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_medium</item>
        <item name="android:background">@drawable/episode_item_number</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.SeasonDetails.Item.EpisodeTitle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_textColor_fourth</item>
        <item name="android:textSize">@dimen/default_textSize_medium</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_medium</item>
    </style>

    <!-- Base Navigation -->
    <style name="AppTheme.Navigation"></style>

    <style name="AppTheme.Navigation.Toolbar">
        <item name="android:layout_height">@dimen/base_navigation_toolbar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/base_navigation_toolbar_minHeight</item>
        <item name="android:background">@color/base_navigation_toolbar_background</item>
    </style>

    <style name="AppTheme.Navigation.Toolbar.Transparent">
        <item name="android:background">@color/base_navigation_toolbar_transparent_background</item>
    </style>

    <!-- Base Loading -->
    <style name="AppTheme.Loading"></style>

    <style name="AppTheme.Loading.Container">
        <item name="android:background">@color/base_loading_container_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTheme.Loading.Progress">
        <item name="android:layout_width">@dimen/base_loading_progress_size</item>
        <item name="android:layout_height">@dimen/base_loading_progress_size</item>
        <item name="android:indeterminate">true</item>
    </style>

</resources>